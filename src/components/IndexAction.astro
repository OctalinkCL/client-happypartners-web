---
import imageContact from "../assets/contact.webp";
import imageContactAlt from "../assets/contact_alt.webp";

const title = "Hablemos de tus necesidades.";
const text =
  "Contáctanos para conocer más sobre nuestro proceso, nuestra misión o para obtener un presupuesto preciso para tu proyecto.";
const textButton = "Escríbenos";
const linkButton = "contacto@happypartners.cl";
---

<section id="action" class="lg:py-12">
  <div
    class="container mx-auto lg:px-0 h-96 relative lg:rounded-xl overflow-hidden lg:grid lg:grid-cols-2"
  >
    <!-- content -->
    <div
      class="absolute w-full h-full flex flex-col justify-center px-4 z-30 md:bg-deeplum md:relative md:h-96 md:px-18 text-white"
    >
      <!-- title -->
      <h3 class="font-display text-4xl font-semibold mb-5">{title}</h3>
      <!-- text -->
      <p class="text-white font-sora text-sm">{text}</p>
      <!-- button -->
      <div class="pt-6 md:pt-12">
        <a
          href={`mailto:${linkButton}`}
          class="text-md text-violet-950 font-medium px-6 py-3.5 bg-lila rounded-full hover:bg-purple-400 transition"
        >
          {textButton}
        </a>
      </div>
    </div>

    <!-- maskColor -->
    <div
      class="absolute w-full h-full bg-linear-to-t from-deeplum to-black/0 lg:w-1/2 right-0 z-20 md:bg-none"
    >
    </div>
    <img
      src={imageContact.src}
      alt="image"
      class="w-full h-full object-cover lg:hidden"
    />
    <img
      src={imageContactAlt.src}
      alt="image"
      class="w-full h-full object-cover hidden lg:block"
    />
  </div>
</section>
