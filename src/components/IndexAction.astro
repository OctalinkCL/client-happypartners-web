---
import imageAbout from "../assets/about.jpg";
---

<section id="action" class="lg:py-12">
  <div
    class="container mx-auto lg:px-0 h-96 relative lg:rounded-xl overflow-hidden lg:grid lg:grid-cols-2"
  >
    <!-- content -->
    <div
      class="absolute w-full h-full flex flex-col justify-center px-4 z-30 md:bg-violet-800 md:relative md:h-96 md:px-18"
    >
      <!-- title -->
      <h3 class="font-display text-white text-4xl font-semibold mb-5">
